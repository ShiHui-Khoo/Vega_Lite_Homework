{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Life Expectancy of each Country in the World",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ShiHui-Khoo/Vega_Lite_Homework/main/FIT_3179_Homework_9/data/Life_Expectancy.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Dataset_Longitude", "type": "quantitative"},
          "latitude": {"field": "Dataset_Latitude", "type": "quantitative"},
          "size": {
            "field": "Life expectancy",
            "type": "quantitative",
            "scale": {"domain": [0, 100]}
          },
          "color": {
            "field": "Life expectancy",
            "type": "quantitative",
            "scale": {"scheme": "reds"}
          }
        }
      }
    ]
  }